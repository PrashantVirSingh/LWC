                      =====Example 01:=====

 <template>

Value from getter method 1: {_fullName}  <br/>

Dynamic Value from getter method 2: {dynamicFullName}  <br/>

</template>

import { LightningElement} from 'lwc';
export default class ChildCmp extends LightningElement {
  
firstName = 'Prashant';

lastName="Veer Singh";



get _fullName(){

return  this.firstName + ' ' + this.lastName;

}

get dynamicFullName(){

return  `${this.firstName}    ${this.lastName}`;

}

}


                                             =====Example 02:=====
<template>


 Value from getter method 1: {_fullName} <br/>

 Dynamic Value from getter method 2: {dynamicFullName}  <br/>


 <!-- Neutral variant (default) -->
        <lightning-button label="Update First Name" title="Non-primary action" 
        onclick={handleClick} class="slds-m-left_x-small"></lightning-button>

        <br/>

        <!-- Neutral variant (default) -->
        <lightning-button label="Increment" title="Non-primary action" 
        onclick={increment} class="slds-m-left_x-small"></lightning-button>

        The Value of Initial: {_initial}

</template>

  
import { LightningElement} from 'lwc';
export default class ChildCmp extends LightningElement {
  
firstName = 'Prashant';

lastName="Veer Singh";

initial=10;

get _fullName(){

    console.log('@@@ getter _fullName fired');
return  this.firstName + ' ' + this.lastName;

}

get dynamicFullName(){

     console.log('@@@ getter dynamicFullName fired');

return  `${this.firstName}    ${this.lastName}`;

}

handleClick(){

    this.firstName = 'Mr. Prashant Salesforce';
}

get _initial(){
   return this.initial;
}

set _initial(value){
    this.initial = value;
}
increment(){
this._initial++;
}
}

Explaination: https://youtu.be/UaHbe3qjQ4k



										 =====Example 03:=====
<template>

<div>
<lightning-button  label="Increment" variant="brand" onclick={incrementHandler}></lightning-button>
        <p>Increment value is : {increment}</p><br/>

        
</div>
 
</template>

import { LightningElement,api} from 'lwc';
export default class ChildCmp extends LightningElement {
  

_increment=0;


@api get increment(){

    return this._increment;
}

set increment(value){
    this._increment=value;
}

incrementHandler(){
    //this._increment++;
    this.increment++;

}
}
  
											=====Example 04:=====
<template>

<div>
<lightning-button  label="Increment" variant="brand" onclick={incrementHandler}></lightning-button>
        <p>Increment value is : {increment}</p><br/>

        {validationscrenario}
</div>
 
</template>

  
import { LightningElement,api} from 'lwc';
export default class ChildCmp extends LightningElement {
  

_increment=0;
validationscrenario;

@api get increment(){

    return this._increment;
}

set increment(value){
    this.validationscrenario=value;
}

incrementHandler(){
    //this._increment++;
    this.increment++;

}
}

